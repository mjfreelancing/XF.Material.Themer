<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="XF.Material.Themer.Views.PalettePage"
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:controls="clr-namespace:XF.Material.Themer.Controls;assembly=XF.Material.Themer"
  xmlns:d="http://xamarin.com/schemas/2014/forms/design"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:models="clr-namespace:XF.Material.Themer.Models"
  xmlns:viewModels="clr-namespace:XF.Material.Themer.ViewModels;assembly=XF.Material.Themer"
  Title="Palette"
  x:DataType="viewModels:PaletteViewModel"
  mc:Ignorable="d">
  <ContentPage.BindingContext>
    <viewModels:PaletteViewModel />
  </ContentPage.BindingContext>
  <ContentPage.Resources>
    <ResourceDictionary>
      <Style x:Key="GridStyle" TargetType="Grid">
        <Setter Property="Padding" Value="16,28" />
      </Style>

      <Style
        x:Key="PaletteItemStyle"
        x:DataType="models:PaletteElement"
        TargetType="controls:PaletteItemView">
        <Setter Property="Caption" Value="{Binding Caption}" />
        <Setter Property="ThemeColor" Value="{Binding ThemeColor}" />
        <Setter Property="ColorHex" Value="{Binding ThemeColor, Converter={StaticResource ColorToHex}}" />
      </Style>

      <LinearItemsLayout
        x:Key="CarouselItemsLayout"
        ItemSpacing="12"
        Orientation="Horizontal"
        SnapPointsAlignment="Center"
        SnapPointsType="Mandatory" />

      <Style x:Key="CarouselStyle" TargetType="CarouselView">
        <Setter Property="PeekAreaInsets" Value="40" />
        <!--  This should work, but doesn't : https://github.com/xamarin/Xamarin.Forms/issues/9280  -->
        <!--<Setter Property="ItemsLayout" Value="{StaticResource CarouselItemsLayout}" />-->
        <Setter Property="ItemTemplate">
          <Setter.Value>
            <DataTemplate>
              <controls:PaletteItemView Style="{StaticResource PaletteItemStyle}" />
            </DataTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </ContentPage.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid
      Grid.Row="0"
      BackgroundColor="{StaticResource GridLightBackgroundColor}"
      Style="{StaticResource GridStyle}">
      <CarouselView
        ItemsLayout="{StaticResource CarouselItemsLayout}"
        ItemsSource="{Binding LightThemeColorElements}"
        Style="{StaticResource CarouselStyle}" />
    </Grid>

    <Grid
      Grid.Row="1"
      Grid.Column="0"
      Padding="16,28"
      BackgroundColor="{StaticResource GridDarkBackgroundColor}">
      <CarouselView
        ItemsLayout="{StaticResource CarouselItemsLayout}"
        ItemsSource="{Binding DarkThemeColorElements}"
        Style="{StaticResource CarouselStyle}" />
    </Grid>
  </Grid>
</ContentPage>